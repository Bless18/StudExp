<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="219dp"
        android:layout_height="290dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_course"
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:elevation="40dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_subject"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@id/subject_description"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_subject"
                    android:layout_marginTop="7dp"
                    android:background="#D3D3D3"
                    android:text="This will contain the description of the given subject\n and give the a little overview " />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</FrameLayout>